.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

page {
  height:100%;
  background: rgb(242, 242, 242)
}

text{
  font-family: '微软雅黑'
}


@import "wxss/form.wxss";
@import "wxss/button.wxss";


view, text, navigator, input, button {
  font-size: 28rpx;
}

.text-h1 {
  font-size: 52rpx;
}
.text-h2 {
  font-size: 48rpx;
}
.text-h3 {
  font-size: 44rpx;
}
.text-h4 {
  font-size: 40rpx;
}
.text-h5 {
  font-size: 36rpx;
}
.text-h6 {
  font-size: 32rpx;
}
